""" Query the BNC """

####################################################################################################
#
# Logging
#

import Babel.Logging.Logging as Logging

logger = Logging.setup_logging('babel')

####################################################################################################

import argparse

####################################################################################################

from Babel.Lexique.BritishNationalCorpus import BritishNationalCorpusDataBase

####################################################################################################
#
# Options
#

argument_parser = argparse.ArgumentParser(description='A tool to query the British National Corpus database.')

argument_parser.add_argument('word', metavar='WORD',
                             help='Word')

args = argument_parser.parse_args()

####################################################################################################

database = BritishNationalCorpusDataBase()
word_table = database.word_table
part_of_speech_tag_table = database.part_of_speech_tag_table

word_rows = word_table.filter_by(word=args.word).all()
for word_row in word_rows:
    tag_row = part_of_speech_tag_table.filter_by(id=word_row.part_of_speech_tag_id).one()
    # Fixme: comment layout
    message = '''
Word
  word: {}
  count: {}
  part of speech tag: {}
  {}
'''
    print(message.format(word_row.word, word_row.count, tag_row.tag, tag_row.comment))

####################################################################################################
# 
# End
# 
####################################################################################################
